@model IEnumerable<a1OEC.Models.Variety>

@{
    ViewData["Title"] = "Index";
    ViewData["message"] = ViewBag.message;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
    
</p>
<p><h3>@ViewData["message"]</h3></p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Crop)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        <!--(@TempData["fromHKVarietyController"])-->
@foreach (var item in Model.OrderBy(item=>item.Name)) {
        <tr>
            <td>
                <a asp-area="" asp-controller="HKPlot" asp-action="index" asp-route-varietyId="@item.VarietyId"  asp-route-varietyName="@item.Name" asp-route-where="Variety" asp-route-name ="@item.Name">@Html.DisplayFor(modelItem => item.Name)</a> 
            </td>
          <!--  <td>
                @Html.DisplayFor(modelItem => item.Crop.CropId)
            </td>
              -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.VarietyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VarietyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VarietyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
